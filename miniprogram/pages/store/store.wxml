<view class="page">
  <view class="header-container">
    <tabs tabs="{{ tabs }}"></tabs>
    <view class="search">
      <image class="icon" src="/assets/images/search.svg" mode="" />
      <view class="label" bind:tap="searchStore">搜索门店</view>
    </view>
  </view>
  <view class="map-container">
    <map
      id="store-map"
      class="store-map"
      show-location
      longitude="{{ longitude }}"
      latitude="{{ latitude }}"
      markers="{{ markers }}"
    >
      <image class="current-location" src="/assets/images/current-location.svg" bind:tap="moveToCurrentLocation" />
    </map>
  </view>
  <view class="collapse-panel" bind:tap="collapseMap">
    <block wx:if="{{ collapsed }}">
      <view class="label">展开地图</view>
      <image class="icon" src="/assets/images/arrow-down.svg" />
    </block>
    <block wx:else>
      <view class="label">收起地图</view>
      <image class="icon" src="/assets/images/arrow-up.svg" />
    </block>
  </view>
  <scroll-view class="stores-container" scroll-y>
    <view class="store">
      <view class="info">
        <view class="name">蜜雪冰城（万家丽宽寓大厦店）</view>
        <view class="tag">
          <view class="trading">营业中</view>
          <view class="room-service">可外送</view>
        </view>
        <view class="opening-hours">营业时间：09:00-23:35</view>
        <view class="address">直线距离285m | 湖南省长沙市芙蓉区万家丽 中路一段139号宽寓大厦105号</view>
      </view>
      <view class="location">
        <image class="star" src="/assets/images/star.svg" />
        <view class="label">去下单</view>
        <view class="action-wrapper">
          <view class="action-btn navigation">
            <image src="/assets/images/navigation.svg" />
          </view>
          <view class="action-btn phone">
            <image src="/assets/images/phone.svg" />
          </view>
        </view>
      </view>
    </view>
    <view class="store">
